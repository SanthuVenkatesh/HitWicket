<UserControl x:Class="HitWicket.UserControls.UTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HitWicket.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Text="{Binding Path=Watermark}"
                 HorizontalAlignment="Left"
                 Width="200" Height="35"
                 MinWidth="100" MinHeight="25"
                 MaxWidth="500" MaxHeight="35"
                 GotFocus="txtBox_GotFocus" LostFocus="txtBox_LostFocus"
                 Name="txtBox" VerticalAlignment="Top" />
    </Grid>
</UserControl>
